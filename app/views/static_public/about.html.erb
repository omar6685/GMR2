<%= render 'header' %>
<!-- start hero section -->
<section>
    <% if @about.image.attached? %>
      <%= image_tag  @about.image, class: "h-fit w-full object-contain" %>
    <% end %>
</section>
<!-- end hero section -->
<!-- start second section -->
<section class="mt-[57px] mb-[50px] px-5">
            <h1 class="text-lg md:text-4xl md:w-3/4 m-auto lg:text-5xl text-center font-bold"><%= @about.title %></h1>
            <div class="grid grid-cols-1 m-auto md:w-3/4 sm:grid-cols-2 gap-4 mt-[37px] font-light">
                <%= @about.content %>
                <%= @about.content_2 %>
            </div>
</section>
<!-- end second section -->
<!-- start card section -->
<section class="bg-black pb-20">
            <h1 class="py-10 font-bold text-white text-lg md:text-4xl md:w-3/4 m-auto lg:text-5xl text-center"><%= @about.founder_title %></h1>
            <div class="flex justify-center mx-2">
                <div
                    class="relative flex flex-col bg-clip-border rounded-xl bg-white text-gray-700 shadow-md w-full max-w-[80rem] md:flex-row">
                    <div
                        class="relative md:w-6/12 w-full m-0 overflow-hidden text-gray-700 bg-white rounded-r-none bg-clip-border rounded-xl shrink-0">
                        <% if @about.founder_image.attached? %>
                          <%= image_tag  @about.founder_image, class: "object-cover w-full h-full" %>
                        <% end %>
                    </div>
                    <div class="p-6">
                        <p class="block mb-8 font-sans text-base antialiased font-normal leading-relaxed text-gray-700"><%= @about.founder_description %></p>
                    </div>
                </div>
            </div>
</section>
<!-- end card section -->
<!-- start Timeline section -->
<section>
            <div class=" pt-[100px]">
                <h2 class="text-3xl text-black text-center font-bold mb-2">HISTORY</h2>
                <div class="flex flex-col grid-cols-9 p-2 mx-auto md:grid">
                <% @about.histories.each_with_index do |history, index| %>
                    <% if index.even?  %>
                        <div class="flex md:contents flex-row-reverse">
                            <div
                                class="relative max-w-[400px] p-4 my-6 text-gray-800 bg-white rounded-xl col-start-1 col-end-5 mr-auto md:mr-0 md:ml-auto border border-black">
                                <h3 class="text-lg font-bold lg:text-xl"><%= history.year %></h3>
                                <p class="mt-2 leading-6"><%= history.description %></p>
    
                            </div>
                            <div class="relative col-start-5 col-end-6 mr-7 md:mx-auto">
                                <div class="flex items-center justify-center w-6 h-full">
                                    <div class="w-0.5	 h-full  rounded-t-full bg-black-to-b bg-black">
                                    </div>
                                </div>
                                <div class="absolute w-6 h-6 -mt-3 bg-white border-2 border-black rounded-full top-1/2">
                                </div>
                            </div>
                        </div>
                    <% else %>
                        <div class="flex md:contents">
                            <div class="relative col-start-5 col-end-6 mr-7 md:mx-auto">
                                <div class="flex items-center justify-center w-6 h-full">
                                    <div class="w-0.5 h-full bg-black"></div>
                                </div>
                                <div class="absolute w-6 h-6 -mt-3 bg-white border-2 border-black rounded-full top-1/2">
                                </div>
                            </div>
                            <div
                                class="relative max-w-[400px] p-4 my-6 text-gray-800 bg-white rounded-xl col-start-6 col-end-10 mr-auto border border-black">
                                <h3 class="text-lg font-bold lg:text-xl"><%= history.year %></h3>
                                <p class="mt-2 leading-6"><%= history.description %></p>
    
                            </div>
                        </div>
                    <% end %>
                <% end %>
                </div>
            </div>
</section>
<!-- end Timeline section -->
<!-- start img section -->

<section class="mt-10 mb-20 mx-2 md:mx-20">
  <div class=" w-11/12 md:w-2/3 m-auto">
    <p class=" text-center mt-5 font-bold"><%= @home_site.title %></p>
    <h1 class="text-lg md:text-4xl	lg:text-5xl text-center font-semibold">COMPANY PREMISES</h1>
  </div>

  <div  class="mt-20">
    <% if @home_site.image.attached? %>
      <%= image_tag  @home_site.image, class: "transition-all duration-500 hover:scale-105" %>
    <% end %>
  </div>
</section>
