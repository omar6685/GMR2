<%= render 'static_public/dash_header' %>
<div class="p-4 sm:ml-64">
   <div class="p-4 border-2 flex flex-col border-gray-200 border-dashed rounded-lg dark:border-gray-700">
    <%= form_with(model: privacy, url: privacy.persisted? ? privacy_path(locale: I18n.locale, id: privacy.id) : privacies_path(locale: I18n.locale)) do |form| %>
      <% if privacy.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(privacy.errors.count, "error") %> prohibited this privacy from being saved:</h2>
    
          <ul>
            <% privacy.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    
      <div>
        <%= form.label :title, style: "display: block" %>
        <%= form.text_field :title %>
      </div>
    
      <div>
        <%= form.label :title_ar, style: "display: block" %>
        <%= form.text_field :title_ar %>
      </div>
    
    
      <div>
        <%= form.label :content, style: "display: block" %>
        <%= form.rich_text_area :content %>
      </div>
    
      <div>
        <%= form.label :content_ar, style: "display: block" %>
        <%= form.rich_text_area :content_ar %>
      </div>
    
      <%= form.hidden_field :user_id, value: current_user.id %>
    
    
      <div>
        <%= form.submit %>
      </div>
    <% end %>
   </div>
</div>
