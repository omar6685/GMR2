<%= render 'static_public/dash_header' %>
<div class="p-4 sm:ml-64 bg-white text-black h-screen">
   <div class="p-4 border-2 flex flex-col border-gray-200 border-dashed rounded-lg dark:border-gray-700">
      <%= form_with(model: home_site, url: home_site.persisted? ? home_site_path(locale: I18n.locale, id: home_site.id) : home_sites_path(locale: I18n.locale)) do |form| %>
        <% if home_site.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(home_site.errors.count, "error") %> prohibited this home_site from being saved:</h2>
      
            <ul>
              <% home_site.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      
        <div>
          <%= form.label :title, style: "display: block" %>
          <%= form.text_field :title %>
        </div>
      
        <div>
          <%= form.label :title_ar, style: "display: block" %>
          <%= form.text_field :title_ar%>
        </div>
      
        <div>
          <%= form.label :image, style: "display: block" %>
          <%= form.file_field :image, accept: 'image/png,image/jpg' %>
        </div>
      
          <%= form.hidden_field :user_id, value: current_user.id %>
        <div>
          <%= form.submit %>
        </div>
      <% end %>
   </div>
</div>

