<%= render 'static_public/dash_header' %>

<div class="p-4 sm:ml-64">
  <div class="p-4 border-2 flex flex-col border-gray-200 border-dashed rounded-lg dark:border-gray-700">
    <p style="color: green"><%= notice %></p>
    
    <h1>Highlight</h1>

    
    
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        Name
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Name Ar
                    </th>
                    <th scope="col" class="px-6 py-3">
                        <span class="sr-only text-black">Edit</span>
                    </th>
                    <th scope="col" class="px-6 py-3">
                        <span class="sr-only text-black">Delete</span>
                    </th>
                </tr>
            </thead>
            <tbody>
              <% @highlights.each do |highlight| %>
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        <%= highlight.product.name %>
                    </th>
                    <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        <%= highlight.product.name_ar %>
                    </th>
                    </td>
                    <td class="px-6 py-4 text-right">
                        <%= link_to "Edit", edit_highlight_path(highlight), class: "font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
                    </td>
                    <td class="px-6 py-4 text-right text-red-700">
                        <%= link_to "Delete", highlight_path(highlight), method: :delete, data: { confirm: "Are you sure?" }, class: "font-medium hover:underline" %>
                    </td>
                  <% end %>
                </tr>
            </tbody>
        </table>
    </div>
  </div>    
</div>