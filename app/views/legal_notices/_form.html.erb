<%= render 'static_public/dash_header' %>
<div class="p-4 sm:ml-64 bg-white text-black border-dashed rounded-lg">
    <%= form_with(model: legal_notice, url: legal_notice.persisted? ? legal_notice_path(locale: I18n.locale, id: legal_notice.id) : legal_notices_path(locale: I18n.locale)) do |form| %>
      <% if legal_notice.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(legal_notice.errors.count, "error") %> prohibited this legal_notice from being saved:</h2>
    
          <ul>
            <% legal_notice.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    
      <div>
        <%= form.label :title, style: "display: block" %>
        <%= form.text_field :title, required: true %>
      </div>
    
      <div>
        <%= form.label :title_ar, style: "display: block" %>
        <%= form.text_field :title_ar, required: true %>
      </div>
    
      <div>
        <%= form.label :content, style: "display: block" %>
        <%= form.rich_text_area :content, required: true %>
      </div>
    
      <div>
        <%= form.label :content_ar, style: "display: block" %>
        <%= form.rich_text_area :content_ar, required: true %>
      </div>
    
      <%= form.hidden_field :user_id, value: current_user.id %>
    
      <div>
        <%= form.submit %>
      </div>
    <% end %>
   </div>
</div>
