<%= render 'static_public/dash_header' %>
<div class="p-4 sm:ml-64">
   <div class="p-4 border-2 flex flex-col border-gray-200 border-dashed rounded-lg dark:border-gray-700">
    
    <%= form_with(model: home_test, url: home_test.persisted? ? home_test_path(locale: I18n.locale, id: home_test.id) : home_tests_path(locale: I18n.locale)) do |form| %>
      <% if home_test.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(home_test.errors.count, "error") %> prohibited this home_test from being saved:</h2>
    
          <ul>
            <% home_test.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    
      <div>
        <%= form.label :title, style: "display: block" %>
        <%= form.text_field :title, required: true %>
      </div>
      <div>
        <%= form.label :title_ar, style: "display: block" %>
        <%= form.text_field :title_ar, required: true %>
      </div>
    
      <div>
        <%= form.label :content, style: "display: block" %>
        <%= form.rich_text_area :content, required: true %>
      </div>
      <div>
        <%= form.label :content_ar, style: "display: block" %>
        <%= form.rich_text_area :content_ar, required: true %>
      </div>
      <%= form.hidden_field :user_id, value: current_user.id %>
    
      <div>
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>
