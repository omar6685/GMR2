<%= render 'static_public/dash_header' %>
<div class="p-4 sm:ml-64 bg-white text-black">
   <div class="p-4 border-2 flex flex-col border-gray-200 border-dashed rounded-lg dark:border-gray-700">
    <%= form_with(model: logo, url: logo.persisted? ? logo_path(locale: I18n.locale, id: logo.id) : logos_path(locale: I18n.locale)) do |form| %>
      <% if logo.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(logo.errors.count, "error") %> prohibited this logo from being saved:</h2>
    
          <ul>
            <% logo.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    
    
      <%= form.hidden_field :user_id, value: current_user.id %>

      <div>
        <%= form.label :logo, style: "display: block" %>
        <%= form.file_field :logo, accept: 'image/png,image/jpg,image/gif' %>
      </div>
    
      <div>
        <%= form.label :image, style: "display: block" %>
        <%= form.file_field :image, accept: 'image/png,image/jpg' %>
      </div>
    
      <div>
        <%= form.label :pdf_file, style: "display: block" %>
        <%= form.file_field :pdf_file, accept: 'application/pdf' %>
      </div>
    
      <div>
        <%= form.label :favicon, style: "display: block" %>
        <%= form.file_field :favicon, accept: 'image/png,image/jpg' %>
      </div>
    
      <div>
        <%= form.label :description, style: "display: block" %>
        <%= form.rich_text_area :description, required: true %>
      </div>
        <%= form.label :description_ar, style: "display: block" %>
        <%= form.rich_text_area :description_ar, required: true %>
      <div>
    
      </div>
    
      <div>
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>
    